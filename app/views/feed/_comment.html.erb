<div id="<%= dom_id comment %>" class="p-4 bg-gray-100 rounded-lg shadow">
  <div class="flex justify-between items-start">
    <p class="text-gray-500">By: <%= post.user.email.split("@").first %></p>
    <%= link_to "Delete", [post, comment], method: :delete, confirm: "Are you sure?", class: "text-red-600 hover:text-red-800 font-medium text-sm" %>
  </div>
  <p class="text-gray-700"><%= comment.content %></p>
  <p class="mt-2 text-sm text-gray-500">Posted on <%= time_ago_in_words(comment.created_at) %></p>
</div>
