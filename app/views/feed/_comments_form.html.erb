<%= form_with(model: comment, class: "content") do |form| %>
  <div class="my-5">
    <%= form.rich_textarea :content, class: "block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
