<div class="w-full flex flex-col bg-cover bg-top min-h-screen items-center" style="background-image: url('<%= asset_path("ferrari.jpg") %>');">
  <div class="mt-20 max-w-4xl h-full mx-auto p-8 rounded-lg shadow-lg bg-gradient-to-r from-black to-gray-800 text-white">
    <div class="flex flex-col items-center justify-center text-center">
      <div class="mt-20 text-white flex flex-col justify-center items-center">
        <h1 class="font-bold text-6xl">F1-Social</h1>
        <p class="mt-4 text-lg">Private social media network for F1 fans</p>
        <p class="">Ready to sign up?</p>
      </div>

      <div class="flex flex-row gap-x-16 gap-y-10 mt-20 px-16 mb-16">
        <%= link_to "https://www.formula1.com", class: "w-64", target: "_blank", rel: "noopener noreferrer" do %>
          <button class="bg-gradient-to-r from-blue-600 to-blue-800 hover:from-blue-700 hover:to-blue-900 text-white font-bold py-4 px-8 rounded-lg w-full text-xl flex items-center justify-center space-x-3 transition duration-300 ease-in-out transform hover:scale-105 shadow-lg hover:shadow-xl">
