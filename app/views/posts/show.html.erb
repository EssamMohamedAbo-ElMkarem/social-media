<% content_for :title, "Showing post" %>

<div class="flex flex-col min-h-screen items-center justify-center bg-gradient-to-b from-black to-gray-800 py-10">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render @post %>

  <div>
    <% if current_user.id == @post.user.id %>
    <%= link_to "Edit this post", edit_post_path(@post), class: " rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this post", @post, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
    </div>
    <% end %>
    <%= link_to "Back to feed", feed_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  </div>
</div>
