<% content_for :title, "Editing post" %>

<div class="min-h-screen bg-gradient-to-b from-black to-gray-800 py-10">
  <div class="md:w-2/3 w-full mx-auto bg-white shadow-lg rounded-lg p-8 mt-8">
    <!-- Page Title -->
    <h1 class="font-bold text-4xl text-gray-800 mb-6 text-center">Editing Post</h1>

    <!-- Form Section -->
    <div class="mb-8">
      <%= render "form", post: @post %>
    </div>

    <!-- Action Buttons -->
    <div class="flex justify-center space-x-4">
      <%= link_to "Show this post", @post, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium transition duration-200 ease-in-out" %>
      <%= link_to "Back to feed", feed_path, class: "rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium transition duration-200 ease-in-out" %>
    </div>
  </div>
</div>